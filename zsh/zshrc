# GENERATED BY INSTALLER:
# USE THIS FILE FOR SHELL CONFIGURATION AND USERCOMMANDS


# convenience aliases:
alias reboot="sudo reboot"
alias poweroff="sudo poweroff"
alias shutdown="sudo shutdown now"
alias xi="sudo xbps-install"
alias xr="sudo xbps-remove"
alias xu="sudo xbps-install -Syu"
alias xs="sudo xbps-query -Rs"
alias vim="nvim"


# auto cd into typed directory:
setopt autocd


# enable colors:
autoload -U colors && colors


# change colors for prompt and co.
PS1="%B%{$fg[red]%}[%{$fg[yellow]%}%n%{$fg[green]%}@%{$fg[blue]%}%M %{$fg[magenta]%}%~%{$fg[red]%}]%{$reset_color%}$%b "
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=#777c66'


# fix annoying stuff
# disable ctrl-s to freeze terminal
stty stop undef
# move .zcompdump directory
autoload -Uz compinit
compinit -d $HOME/.cache/zsh/zcompdump-$ZSH_VERSION


# add ctrl+a and ctrl+e support
bindkey -M viins '^a' beginning-of-line
bindkey -M viins '^e' end-of-line


# configure shell history
HISTFILE=$HOME/.cache/zsh/histfile.txt
HISTSIZE=10000
SAVEHIST=10000


# adding locations to PATH
export PATH=/home/asd/.local/bin:/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin
# import plugins
source $HOME/.local/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source $HOME/.local/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
