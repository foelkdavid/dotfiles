# convenience aliases:
alias reboot="sudo reboot"
alias poweroff="sudo poweroff"
alias shutdown="sudo shutdown now"
alias xi="sudo xbps-install"
alias xr="sudo xbps-remove"
alias xu="sudo xbps-install -Syu"
alias xs="sudo xbps-query -Rs"
alias vim="nvim"
alias ls="exa"
alias ll="exa -la"

alias zshconf="vim ~/.config/zsh/.zshrc"
alias xinitconf="vim ~/.config/x/xinitrc"
alias dwmconf="vim ~/.local/src/dwm/config.h"
alias dwmbuild="cd ~/.local/src/dwm/ && make && sudo make install"
alias stconf="vim ~/.local/src/st/config.h"
alias stbuild="cd ~/.local/src/st/ && make && sudo make install"